{
  "name": "reviewchecker",
  "version": "1.0.0",
  "description": "Polls website for data defined by a selector and presents the result",
  "main": "index.js",
  "scripts": {
    "claudia:create": "claudia create --region us-east-1 --api-module index --timeout 120",
    "claudia:deploy": "claudia update",
    "api:test-one": "curl https://j0f1kw9je5.execute-api.us-east-1.amazonaws.com/latest/KanbanGoodRead",
    "api:test-all": "curl https://j0f1kw9je5.execute-api.us-east-1.amazonaws.com/latest/",
    "api:test": "npm run api:test-one && npm run api:test-all",
    "test": "mocha -u bdd -R spec -b --timeout 5000",
    "test:watch": "npm t -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcusoftnet/reviewchecker.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "claudia"
  ],
  "author": "Marcus Hammarberg @marcusoftnet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcusoftnet/reviewchecker/issues"
  },
  "homepage": "https://github.com/marcusoftnet/reviewchecker#readme",
  "dependencies": {
    "cheerio": "^0.22.0",
    "claudia-api-builder": "^2.0.0",
    "co": "^4.6.0",
    "co-request": "^1.0.0"
  },
  "devDependencies": {
    "mocha": "^3.1.0",
    "should": "^11.1.0"
  }
}
